<div class="new-content">
  <%= form_for(@posts) do |f| %>
  <header class="header" >
  <p>Kh√¥ra</p>
  </header><!-- /header -->

  <div class="note-box">
    <div class="note-box-inner">
      <div class="body-title">
        <%= f.text_area :name %>
        <%= f.hidden_field :note_id, value: "#{@note.id}" %>
      </div>
      <div class="edit-images">
        <%= image_tag @posts.image %>
        </div>

      <div class="body-wrapper">
        <%= f.text_area :text, class: "inner-wrapper" %>
      </div>
    </div>

    <footer>
      <div class="footer-inner clearfix">
       <div class="footer-inner-float">
        <%= f.submit "Update", class: "content_edit-btn" %>
         <div class="edit-image-button">
         <label style="display: inline">
          <%= f.file_field :image %>
          <%= image_tag "button-48px.png" %>
         </label>
        </div>
       </div>
      </div>
    </footer>
  </div>
  <% end %>
</div>
