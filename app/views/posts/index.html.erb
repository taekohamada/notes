 <div class="chat"> <!-- 全体 -->
  <div class="chat-side"> <!-- chat-side 全体 -->
   <div class="chat-user clearfix"> <!--chat上のユーザー -->
    <span class="username">
    <p>Taeko</p>
     <a href="/users/<%= current_user.id %>"> </a>
    </span>



    <div class="chat-user_actions"> <!-- font awesome-->
     <a class="chat-user_action" href="/groups/new">
       <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
     </a>
     <a class="chat-user_action" href="/groups/edit">
  <!--     <i class="fa fa-user-o" aria-hidden="true"></i> -->
     </a>
    </div> <!-- chat-user_actions -->
   </div> <!-- chat-user clearfix -->


   <ul class="chat-groups">
        <p>Taeko/Satoko</p>
      <p>Taeko/Hannah</p>
      <p>Taeko/Naoko</p>
    <li class="chat-group">
     <a class="chat-group_link" href="/groups/6/messages/new"> </a>
      <% @notes.each do |note| %>
      <div>
      <a href="/notes/<%= note.user_id %>"></a>
      </div>


     <% end %> <!-- notes each -->
    </li>
   </ul>
  </div> <!-- chat side -->

  <div class="chat-main">
   <div class="chat-header clearfix">
    <div class="chat-header_left">
        <h3>Taeko / Satoko</h3> <!-- ?? -->
    </div> <!-- chat-header_left -->

    <div class="chat-header_right">
      <a class="chat-header_edit-btn" href="/posts/new">New Post</a>
       <%= link_to "ログアウト", destroy_user_session_path, method: "delete", class: "chat-header_edit-btn" %>
    </div> <!-- chat-header_right -->
   </div> <!-- chat-header clearfix -->

   <div class="chat-body">
    <% @posts.each do |post| %>
     <div class="content-box">
      <div class="username" type="text">
        <span class="name">
         <a href="/users/<%= post.user_id %>">
          <span>投稿者</span><%= post.user.username %>
         </a>
        </span>
      </div>
     <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
       <ul class="more_list">
        <li>
         <%= link_to '詳細', "/posts/#{post.id}", method: :get %>
          <% if user_signed_in? && current_user.id == post.user_id %>
          <% end %>
        </li>
        <li>
         <%= link_to '編集', "/posts/#{post.id}/edit", method: :get %>
        </li>
        <li>
         <%= link_to '削除', "/posts/#{post.id}", method: :delete %>
     <div class="post-content">
       <p><%= post.text %></p>
     </div>
        </li>
       </ul>
      </div> <!-- more -->
     </div> <!-- content-box -->
    <% end %>
   </div> <!-- chat-body -->
  </div> <!-- chat-main -->
 </div> <!-- chat -->


